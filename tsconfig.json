{
  "compilerOptions": {
    "outDir": "./dist",        // Directory to output compiled JavaScript files
    "rootDir": "./src",        // Directory containing the TypeScript source files
    "strict": true,            // Enable all strict type-checking options
    "esModuleInterop": true,   // Enable compatibility with CommonJS modules
    "module": "commonjs",      // Specify module code generation
    "target": "es6",           // Specify ECMAScript target version
    "sourceMap": true          // Generate corresponding '.map' files
  },
  "include": ["src/**/*"],     // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]  // Exclude the node_modules directory
}
